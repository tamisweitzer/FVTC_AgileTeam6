
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="login-wrapper">
        <h2>Login to your Account</h2>


        <div class="login-musician-section">
            <h3>Sign in as Musician</h3>
            <form method="post" class="login-form">
                <div class="form-group">
                    <label class="">Username</label>
                    <input class="form-control" type="text" name="musicianUsername" value="" />
                </div>

                <div class="form-group">
                    <label class="">Password</label>
                    <input class="form-control" type="password" name="musicianPassword" value="" />
                </div>

                <div class="form-group">
                    <button class="btn btn-large btn-primary">Submit</button>
                </div>
            </form>
        </div>
        

        <div class="login-venue-section">
            <h3>Sign in as Venue</h3>
            <form method="post" class="login-form">
                <div class="form-group">
                    <label class="">Username</label>
                    <input class="form-control" type="text" name="venueUsernme" value="" />
                </div>

                <div class="form-group">
                    <label class="">Password</label>
                    <input class="form-control" type="password" name="venuePassword" value="" />
                </div>

                <div class="form-group">
                    <button class="btn btn-large btn-primary">Submit</button>
                </div>
            </form>
        </div>
        

    </div>
